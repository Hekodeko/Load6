-- Brookhaven RP Script (UI + Avatar Copy + Teleport)
-- Made by ismaha08

-- Services
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Main Frame Setup
local ScreenGui = Instance.new("ScreenGui", LocalPlayer:WaitForChild("PlayerGui"))
local MainFrame = Instance.new("Frame", ScreenGui)
MainFrame.Size = UDim2.new(0.3, 0, 0.4, 0)
MainFrame.Position = UDim2.new(0.35, 0, 0.3, 0)
MainFrame.BackgroundColor3 = Color3.fromRGB(169, 169, 169) -- Gray Color
MainFrame.Draggable = true -- Allow frame movement
MainFrame.Active = true
MainFrame.Visible = true

-- Title Label
local Title = Instance.new("TextLabel", MainFrame)
Title.Size = UDim2.new(1, 0, 0.2, 0)
Title.Position = UDim2.new(0, 0, 0, 0)
Title.BackgroundTransparency = 1
Title.Text = "Brookhaven RP Tool"
Title.TextColor3 = Color3.fromRGB(0, 0, 0)
Title.Font = Enum.Font.SourceSans
Title.TextSize = 28

-- Player Selection Drop-Down Menu
local PlayerDropdown = Instance.new("TextButton", MainFrame)
PlayerDropdown.Size = UDim2.new(0.8, 0, 0.1, 0)
PlayerDropdown.Position = UDim2.new(0.1, 0, 0.3, 0)
PlayerDropdown.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- Black button
PlayerDropdown.TextColor3 = Color3.fromRGB(255, 255, 255)
PlayerDropdown.Text = "Choose Player"
PlayerDropdown.TextSize = 24

local ChosenPlayer
PlayerDropdown.MouseButton1Click:Connect(function()
    local PlayerList = {}
    for _, player in pairs(Players:GetPlayers()) do
        table.insert(PlayerList, player.Name)
    end
    
    -- Basic example of how you could display a player list (Modify for advanced use)
    ChosenPlayer = PlayerList[math.random(1, #PlayerList)] -- Random for simplicity
    PlayerDropdown.Text = "Selected: " .. ChosenPlayer
end)

-- Avatar Copy Button
local CopyAvatarButton = Instance.new("TextButton", MainFrame)
CopyAvatarButton.Size = UDim2.new(0.8, 0, 0.1, 0)
CopyAvatarButton.Position = UDim2.new(0.1, 0, 0.5, 0)
CopyAvatarButton.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- Black button
CopyAvatarButton.TextColor3 = Color3.fromRGB(255, 255, 255)
CopyAvatarButton.Text = "Copy Avatar"
CopyAvatarButton.TextSize = 24

CopyAvatarButton.MouseButton1Click:Connect(function()
    local TargetPlayer = Players:FindFirstChild(ChosenPlayer)
    if TargetPlayer then
        -- Avatar Copy Logic (placeholder as exact avatar copying is restricted)
        print("Copying avatar from " .. TargetPlayer.Name)
        -- Potential usage of HumanoidDescription API for custom avatars
    else
        print("Player not found!")
    end
end)

-- Teleport Button
local TeleportButton = Instance.new("TextButton", MainFrame)
TeleportButton.Size = UDim2.new(0.8, 0, 0.1, 0)
TeleportButton.Position = UDim2.new(0.1, 0, 0.65, 0)
TeleportButton.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- Black button
TeleportButton.TextColor3 = Color3.fromRGB(255, 255, 255)
TeleportButton.Text = "Teleport to Player"
TeleportButton.TextSize = 24

TeleportButton.MouseButton1Click:Connect(function()
    local TargetPlayer = Players:FindFirstChild(ChosenPlayer)
    if TargetPlayer then
        LocalPlayer.Character:MoveTo(TargetPlayer.Character.HumanoidRootPart.Position)
        print("Teleported to " .. TargetPlayer.Name)
    else
        print("Player not found!")
    end
end)

-- Close Button
local CloseButton = Instance.new("TextButton", MainFrame)
CloseButton.Size = UDim2.new(0.1, 0, 0.1, 0)
CloseButton.Position = UDim2.new(0.9, 0, 0, 0)
CloseButton.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- Black button
CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
CloseButton.Text = "X"
CloseButton.TextSize = 24

CloseButton.MouseButton1Click:Connect(function()
    MainFrame:Destroy()
end)

-- Footer Button with Link to Profile
local ProfileButton = Instance.new("TextButton", MainFrame)
ProfileButton.Size = UDim2.new(0.8, 0, 0.1, 0)
ProfileButton.Position = UDim2.new(0.1, 0, 0.85, 0)
ProfileButton.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- Black button
ProfileButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ProfileButton.Text = "Made by ismaha08"
ProfileButton.TextSize = 24

ProfileButton.MouseButton1Click:Connect(function()
    setclipboard("https://www.roblox.com/users/5509803778/profile?friendshipSourceType=PlayerSearch")
    print("Profile link copied to clipboard.")
end)

-- Reopen Script
function reopenScript()
    ScreenGui.Enabled = true
end
